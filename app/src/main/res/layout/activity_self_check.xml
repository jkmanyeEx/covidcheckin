<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfCheckActivity">

    <ImageView
        android:id="@+id/sc_iv"
        android:layout_width="384dp"
        android:layout_height="384dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/icon"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sc_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/nsreb"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/sw_yes"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/yes"
        app:layout_constraintTop_toBottomOf="@id/sc_ques"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/nsreb"
        android:onClick="onYesButtonClick" />

    <ImageButton
        android:id="@+id/sw_no"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:fontFamily="@font/nsreb"
        android:background="@drawable/no"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sw_yes"
        android:onClick="onNoButtonClick" />

</androidx.constraintlayout.widget.ConstraintLayout>